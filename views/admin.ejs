<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', {title, css, script, animes}) %>
  <body>
    <button id="openModalBtn" class="btn">Add Anime</button>

    <!-- Modal -->
    <div id="modalContainer" class="modal-container">
      <div class="modal">
        <h2>Enter Anime Title</h2>
        <form class="anime-form" action="/admin/room/add" method="POST">
          <div class="form-group">
            <label for="title">Anime Title</label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder="Enter anime title"
              required
            />
          </div>
          <div class="form-group">
            <label for="link">Anime Link</label>
            <input
              type="text"
              id="link"
              name="link"
              placeholder="Enter anime link"
              required
            />
          </div>
          <div class="form-group">
            <label>Genre</label>
            <div class="genre-options">
              <label
                ><input type="checkbox" name="genre" value="Action" />
                <span>Action</span></label
              >
              <label
                ><input type="checkbox" name="genre" value="Comedy" />
                <span>Comedy</span></label
              >
              <label
                ><input type="checkbox" name="genre" value="Drama" />
                <span>Drama</span></label
              >
              <label
                ><input type="checkbox" name="genre" value="Fantasy" />
                <span>Fantasy</span></label
              >
              <label
                ><input type="checkbox" name="genre" value="Romance" />
                <span>Romance</span></label
              >
              <label
                ><input type="checkbox" name="genre" value="Slice of Life" />
                <span>Slice of Life</span></label
              >
              <label
                ><input type="checkbox" name="genre" value="Supernatural" />
                <span>Supernatural</span></label
              >
            </div>
          </div>
          <div class="form-actions">
            <button type="button" id="closeModalBtn" class="btn close-btn">
              Cancel
            </button>
            <button type="submit" class="btn submit-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>

    <div class="anime-grid">
      <% animes.forEach(anime => { %>
      <div
        class="anime-card"
        onclick="window.open('<%= anime.link %>', '_blank')"
      >
        <img
          src="<%= anime.image || 'https://png.pngtree.com/png-clipart/20190925/original/pngtree-no-image-vector-illustration-isolated-png-image_4979075.jpg' %>"
          alt="<%= anime.title %>"
        />
        <div class="anime-card-content">
          <h3 class="anime-card-title"><%= anime.title %></h3>
          <p class="anime-card-genres">
            <%= anime.genres || 'No genres available' %>
          </p>
          <form action="/admin/room/delete/<%= anime.id %>" method="POST">
            <button type="submit" class="btn delete-btn">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
